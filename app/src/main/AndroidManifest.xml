<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.azhar.banksampah">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BankSampah"
        android:usesCleartextTraffic="true"
        tools:targetApi="s">
        <activity
            android:name=".view.onboard.WelcomeActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.onboard.LoginActivity"
            android:exported="true" >
        </activity>
        <activity
            android:name=".view.onboard.RegisterActivity"
            android:exported="true" >
        </activity>
        <activity
            android:name=".view.main.MainActivity"
            android:exported="true" >
        </activity>
        <activity
            android:name=".view.jenis.JenisSampahActivity"
            android:exported="true" />
        <activity
            android:name=".view.history.RiwayatActivity"
            android:exported="true" />
        <activity
            android:name=".view.input.InputDataActivity"
            android:exported="true" />
        <activity
            android:name=".view.info.InfoActivity"
            android:exported="true" />
        <activity
            android:name=".view.banksampah.BankSampahActivity"
            android:exported="true" />
        <activity
            android:name=".view.kategori.KategoriActivity"
            android:exported="true" />
    </application>

</manifest>